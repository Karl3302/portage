<?xml version="1.0" encoding="utf-8"?>
<!-- Animation: enter the screen from bottom side -->
<set xmlns:android="http://schemas.android.com/apk/res/android" >
    <scale
        android:duration="@integer/duration_vertical_full_animation"
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />
    <translate
        android:duration="@integer/duration_vertical_full_animation"
        android:fromYDelta="80%"
        android:toYDelta="0%" >
    </translate>
    <!-- fade -->
    <alpha
        android:duration="@integer/duration_vertical_full_animation"
        android:fromAlpha="0"
        android:toAlpha="1.0" />
</set>