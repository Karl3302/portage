<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.zeprofile.zeprofile.base.CustomPreferenceCategory
        android:key="user_visibility_category_location"
        android:title="Localisation">
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_preference_localization_continuous"
            android:title="@string/text_localization_continuous"/>
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_preference_localization_address"
            android:title="@string/text_localization_address" />
    </com.zeprofile.zeprofile.base.CustomPreferenceCategory>

    <com.zeprofile.zeprofile.base.CustomPreferenceCategory
        android:key="user_visibility_category_duration"
        android:title="Durée">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/list_titles_duration_user_visibility"
            android:entryValues="@array/list_values_duration_user_visibility"
            android:key="@string/key_preference_duration"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/title_duration_user_visibility" />
    </com.zeprofile.zeprofile.base.CustomPreferenceCategory>

    <com.zeprofile.zeprofile.base.CustomPreferenceCategory
        android:key="user_visibility_category_recipient"
        android:title="Destinataire">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/list_titles_destination_user_visibility"
            android:entryValues="@array/list_values_destination_user_visibility"
            android:key="@string/key_preference_destination"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="@string/title_destination_user_visibility" />
    </com.zeprofile.zeprofile.base.CustomPreferenceCategory>

    <!--TODO 目前只能实现数字的滚动式选择器-->
    <com.zeprofile.zeprofile.base.CustomPreferenceCategory
        android:key="user_setting_category_test"
        android:title="Test_Wheel_Picker">
        <com.zeprofile.zeprofile.base.NumberPickerPreference
            android:defaultValue="1"
            android:key="key_number"
            android:title="Number Picker" />
    </com.zeprofile.zeprofile.base.CustomPreferenceCategory>
</PreferenceScreen>